<Alloy>
	    <!-- Default App Window -->
	<Window id="nav" class="container" platform="android,mobileweb,blackberry">
		
		<!-- 
		Menu Item to open the bookmarks view
		-->
		<Menu id="menu" platform="android">
            <MenuItem id="bookmarkBtn" title="L('bookmarks')" icon="/images/bookmark.png" onClick="onBookmarkClick" showAsAction="Ti.Android.SHOW_AS_ACTION_IF_ROOM"/>
        </Menu>
		 <Require src="directory" />
	</Window>
	
    <!-- iOS Window -->
    <NavigationWindow id="nav" platform="ios" class="container">
    	<Window title="Directory" class="wrapper">
    		<LeftNavButton>
			 	<Label id="logo" />
			 </LeftNavButton>
    		<Require src="directory" />
    	</Window>
    </NavigationWindow>
</Alloy>
<Alloy>
	<!-- Main Container of the View, title of the Window is pulled from the title property on the main view-->
	<View class="container fill" title="Profile">
		
		<View class="vgroup top"> 
			<!--
				Top Section of the Profile.
				- Shows the Contact Image, Name, Title, Company
				- Buttons to Call / Email the contact
				- Button to Add/Remove the contact as a favorite
				
				This is a vertically aligned View
			-->
			<View class="vgroup span-width bottom-buffer">
				<View class="span-width">
					<Widget id="emailBtn" src="net.hoyohoyo.iconiclabel" icon="icon-envelope" class="icon-button left-buffer"/>
					<ImageView id="profilePicture" class="top-buffer no-touch" />
					<Widget id="callBtn" src="net.hoyohoyo.iconiclabel" icon="icon-phone" class="icon-button right-buffer"/>
				</View>
				<View class="vgroup size">
					<Label id="name" class='h3 red top-buffer no-touch' >Kelly Smith</Label>
					<Label id="job" class='h5 gray no-touch' >Account Rep</Label>
					<Label id="company" class='h5 gray no-touch' >Appcelerator, Inc</Label>
				</View>
			</View>
			<Button id="addBookmarkBtn" class="span-width h4" onClick="toggleBookmark">+ Add to Bookmarks</Button>
			
			<!-- 
				Bottom Section of the Profile Page
				- A Scrollable View that an end user can swipe to show more information about the user.
				- Information View, shows phone, email, IM
				- About View, a blurb of text about the user
				- MapView shows an annotation of where the user is located
			-->
			<ScrollableView class="top-buffer" pagingControlHeight="20">
				
				<!-- Information View -->
				<View class="vgroup size top-buffer">
					<View class='hgroup span-width'>
						<Widget class="icon red left-buffer" src="net.hoyohoyo.iconiclabel"  icon="icon-qrcode" />
						<Label class="h3 red left-buffer right-buffer">Contact Info</Label>
					</View>
					<View class='hgroup size top-buffer left-buffer'>
						<Widget class="icon red" src="net.hoyohoyo.iconiclabel"  icon="icon-phone" />
						<Label id="phone" class="h5 gray left-buffer right-buffer">512-555-1212</Label>
					</View>
					<View class='hgroup size top-buffer left-buffer'>
						<Widget class="icon red" src="net.hoyohoyo.iconiclabel"  icon="icon-envelope-alt" />
						<Label id="email" class="h5 gray left-buffer right-buffer">kelly.smith@appcelerator.com</Label>
					</View>
					<View class='hgroup size top-buffer left-buffer'>
						<Widget class="icon red" src="net.hoyohoyo.iconiclabel"  icon="icon-comment" />
						<Label id="im" class="h5 gray left-buffer right-buffer">kelly.smith</Label>
					</View>
				</View>
				
				<!-- About View -->
				<View class="vgroup size top-buffer" >
					<View class='hgroup span-width'>
						<Widget class="icon red left-buffer" src="net.hoyohoyo.iconiclabel"  icon="icon-info-sign" />
						<Label class="h3 red left-buffer right-buffer">About</Label>
					</View>
					<ScrollView class="size">
						<Label id="about" class="gray normal-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</Label>
					</ScrollView>
				</View>
				
				<!-- Map View -->
				<View class="vgroup size top-buffer">
					<View class='hgroup span-width'>
						<Widget class="red icon left-buffer" src="net.hoyohoyo.iconiclabel"  icon="icon-map-marker" />
						<Label class="h3 red left-buffer">Location</Label>
						<Label class="h6 gray right-buffer bottom" id="fromHQ" />
					</View>
					
					<!-- 
						Leverages the Map Module, allowing for v2 of Google Maps and latest codebase unifying Google v2 and IOS	
					-->
					<Module id="mapview" module="ti.map" method="createView" class='buffer border-dark-thick no-touch' />
				</View>
			</ScrollableView>
		</View>
	</View>
</Alloy>
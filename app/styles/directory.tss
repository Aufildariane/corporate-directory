
/**
 * 	Style for The User Template
 */
".template":{
	height: 100,
	width: Ti.UI.FILL
},

".favorite":{
	font:{
		fontSize: 20,
		fontFamily:"icomoon",
	},
	text:"\uf02e",
	color:"#038BC8",
	right: 10,
	top:-2
},

".title":{
	font:{
		// fontSize: 14
		fontSize: 20
	},
	left: 85,
	color: "#444"
},

// ".subtitle":{
	// font:{
		// fontSize: 10
	// },
	// left: 85,
	// height: 20,
	// color: "#666"
